<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div data-controller="posts" data-posts-count-value="<%= @posts.length - 1 %>">
  <button data-posts-target="togglable" data-action="click->posts#delete">delete</button>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>created_at</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr data-posts-target="posts" data-href="<%= edit_post_path(post) %>" data-action="click->posts#linkTo">
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>

<%= link_to 'New Post', new_post_path %>

<style>
  .hidden {
      display: none;
  }
</style>
